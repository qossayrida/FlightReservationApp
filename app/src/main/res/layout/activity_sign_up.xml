<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email" />

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/firstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/lastNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/passportNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Passport Number"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/passportIssueDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Passport Issue Date"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/passportIssuePlaceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Passport Issue Place"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/passportExpirationDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Passport Expiration Date"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/foodPreferenceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Food Preference"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/dateOfBirthEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/nationalityEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nationality"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
